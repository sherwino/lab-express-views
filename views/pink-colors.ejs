<section class="colors">

<ul class ="row">
  <% colors.forEach((singleColor) => { %>
    <% if (singleColor.category == "pink") { %>
      <% currentColor = singleColor %>
    <div class = "colorBox col-sm-6">
    <li>
      <div class = "innerBox" style=" background-color: <%= currentColor.hex %> "></div>
      <div class ="colorName"><%= currentColor.keyword %></div>
      <div class ="colorHex"> Hex: <%= currentColor.hex %></div>
    </li>
      <% } %>
    </div>

    <% }); %>
  </ul>

</section>
