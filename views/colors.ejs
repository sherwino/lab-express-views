<h2>Colors</h2>

<div class= "colorNav">
<span><a href = "/pink" class="btn btn-default">Pink</a></span>
<span><a href = "/blue" class="btn btn-primary">Blue</a></span>
<span><a href = "/Yellow" class="btn btn-warning">Yellow</a></span>
<br>
<br>
</div>

<section class="colors">

<ul class ="row">
  <% colors.forEach((singleColor) => { %>
    <div class = "colorBox col-sm-6">
    <li>
      <div class = "innerBox" style=" background-color: <%= singleColor.hex %> "></div>
      <div class ="colorName"><%= singleColor.keyword %></div>
      <div class ="colorHex"> Hex: <%= singleColor.hex %></div>
    </li>
    </div>

    <% }); %>
  </ul>

</section>
